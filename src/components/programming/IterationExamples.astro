---
interface Props {
  code: string;
  description?: string;
}

const { code, description } = Astro.props;
---

<div class="bg-slate-50 p-4 rounded-lg mb-4">
  <pre class="font-mono text-sm whitespace-pre-wrap">{code}</pre>
  {description && <p class="mt-2 text-slate-600 text-sm">{description}</p>}
</div>