---
import Layout from '../../layouts/Layout.astro';
import IterationSection from '../../components/programming/IterationSection.astro';
import OperatorTable from '../../components/programming/OperatorTable.astro';
import { arithmeticOperators, comparisonOperators } from '../../data/operators';
import Card from '../../components/ui/Card.astro';
import CodeBlock from '../../components/ui/CodeBlock.astro';
---

<Layout title="Programming Basics - IG Computer Science">
  <h1>Programming Basics</h1>

  <section class="mb-8">
    <h2>Operators</h2>
    <Card title="Arithmetic Operators">
      <OperatorTable operators={arithmeticOperators} />
    </Card>
    
    <Card title="Comparison Operators" class="mt-4">
      <OperatorTable operators={comparisonOperators} />
    </Card>

    <Card title="Operator Examples" class="mt-4">
      <h3>Arithmetic Examples:</h3>
      <CodeBlock code={`
x ← 10
y ← 3

sum ← x + y       // Result: 13
diff ← x - y      // Result: 7
product ← x * y   // Result: 30
quotient ← x / y  // Result: 3.333...
remainder ← x MOD y // Result: 1`} />

      <h3 class="mt-4">Comparison Examples:</h3>
      <CodeBlock code={`
age ← 18
isAdult ← age >= 18    // Result: TRUE
canVote ← age = 18     // Result: TRUE
needsGuardian ← age < 18 // Result: FALSE`} />
    </Card>
  </section>

  <IterationSection />
</Layout>